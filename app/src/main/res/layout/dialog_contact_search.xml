<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactEntryActivity">


    <RelativeLayout
        android:id="@+id/layoutContactSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dilogBackground"
        android:clickable="true"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/dilog_bg"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageButton
                    android:id="@+id/btnContactClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:layout_centerVertical="true"
                    android:background="@color/trasnperent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Contact"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/txtS2"
                    android:textColor="@color/textColorDark"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/searchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headerLayout"
                android:layout_marginTop="10dp"
                >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/contact_search_bg"
                    android:layout_toLeftOf="@+id/imgbtnNewContact"
                    android:layout_marginRight="10dp">


                    <SearchView
                        android:id="@+id/svContact"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:showDividers="none"
                        android:searchIcon="@null"
                        android:theme="@style/AppSearchView"
                        android:iconifiedByDefault="false"
                        android:queryHint="Search Your Contact"
                        android:queryBackground="@null"
                        />

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/imgbtnNewContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/contact_new_contact"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/trasnperent"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvContact"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_below="@id/searchLayout">

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>