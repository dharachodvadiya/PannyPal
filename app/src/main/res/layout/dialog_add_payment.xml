<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactEntryActivity">

    <RelativeLayout
        android:id="@+id/layoutAddPayment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dilogBackground"
        android:clickable="true"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/dilog_bg_9"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/headerLayoutNewPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New Payment"
                    android:textStyle="bold"
                    android:textSize="@dimen/txtS2"
                    android:textColor="@color/textColorDark"/>

                <ImageButton
                    android:id="@+id/btnNewPaymentClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_close"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/trasnperent"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/headerLayoutNewPayment"
                android:layout_above="@+id/imgbtnSavePayment"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etContactType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textColorLightGray"
                    android:textSize="@dimen/txtS2"
                    android:background="@drawable/dilog_field_bg_9"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="15dp"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/imgbtnSavePayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_entry_btn_save"
                android:layout_alignParentBottom="true"
                android:background="@color/trasnperent"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>